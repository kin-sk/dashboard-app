{
  "name": "dashboard",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "web",
  "workspaceFolder": "/srv/dashboard",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "Vue.volar",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "PKief.material-icon-theme"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3.9",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  
  "forwardPorts": [8000, 5173, 3306, 8080],
  
  "remoteUser": "root",
  
  "postCreateCommand": "cd /srv/dashboard/backend && pip3.9 install -r requirements.txt && cd /srv/dashboard/frontend && npm install"
}