FROM node:20-slim

WORKDIR /app

# Gitをインストール
RUN apt-get update && \
    apt-get install -y git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# package.jsonとpackage-lock.jsonをコピー
COPY package*.json ./

# 依存関係をインストール
RUN npm install

# アプリケーションコードをコピー
COPY . .

# ポート公開
EXPOSE 5173

# 開発サーバー起動（docker-compose.ymlでオーバーライド可能）
CMD ["npm", "run", "dev"]